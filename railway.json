{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "serviceName": "funnel-analyzer-backend",
    "startCommand": "npm run start",
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "OPENAI_API_KEY": {
      "fromProject": "OPENAI_API_KEY"
    },
    "DATABASE_URL": {
      "fromProject": "DATABASE_URL"
    },
    "JWT_SECRET": {
      "fromProject": "JWT_SECRET"
    }
  }
}
