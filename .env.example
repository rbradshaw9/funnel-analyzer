# Copy this file to `.env` and fill in the values before running the project locally.

# ============================================
# Backend Configuration (Python/FastAPI)
# ============================================

# OpenAI API key used for generating embeddings and AI-powered funnel analysis.
OPENAI_API_KEY=sk-your-openai-api-key-here

# Large Language Model provider (defaults to openai)
LLM_PROVIDER=openai

# Database connection string
# Local development (SQLite - default):
DATABASE_URL=sqlite:///./funnel_analyzer.db
# Production (PostgreSQL on Railway):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/funnel_analyzer

# Secret used to sign and verify JSON Web Tokens for WordPress authentication.
JWT_SECRET=replace-with-a-long-random-string-min-32-chars

# Magic link expiration (minutes)
MAGIC_LINK_EXPIRATION_MINUTES=30

# Optional admin credentials seeded at startup when both values are provided.
# Leave blank locally if you do not want an admin account created automatically.
# Production deployments MUST supply secure values through environment variables.
DEFAULT_ADMIN_EMAIL=
DEFAULT_ADMIN_PASSWORD=

# Environment (development, staging, production)
ENVIRONMENT=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3001

# WordPress integration (optional)
WORDPRESS_API_URL=

# ============================================
# Object Storage (Screenshots)
# ============================================

AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=
# Optional: override if using R2/Supabase or CloudFront CDN
AWS_S3_ENDPOINT_URL=
AWS_S3_BASE_URL=
AWS_S3_PUBLIC_URL_EXPIRY_SECONDS=86400

# ============================================
# Email / Notifications
# ============================================

SENDGRID_API_KEY=
EMAIL_DEFAULT_FROM="Funnel Analyzer Pro Reports <reports@funnelanalyzerpro.com>"
EMAIL_DEFAULT_REPLY_TO=support@funnelanalyzerpro.com

# ============================================
# Automation Integrations
# ============================================

THRIVECART_WEBHOOK_SECRET=
MAUTIC_BASE_URL=
MAUTIC_CLIENT_ID=
MAUTIC_CLIENT_SECRET=
MAUTIC_API_USERNAME=
MAUTIC_API_PASSWORD=

# ============================================
# Frontend Configuration (Next.js)
# ============================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_JOIN_URL=https://funnelanalyzerpro.com/pricing
NEXT_PUBLIC_BASIC_CHECKOUT_URL=https://funnelanalyzerpro.com/checkout/basic
NEXT_PUBLIC_PRO_CHECKOUT_URL=https://funnelanalyzerpro.com/checkout/pro

# ============================================
# Deployment Tokens (CI/CD)
# ============================================

# Vercel deployment token for frontend
VERCEL_TOKEN=

# Vercel project configuration
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Railway deployment token for backend
RAILWAY_TOKEN=
